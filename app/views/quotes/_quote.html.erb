<%= turbo_frame_tag dom_id(quote) do %>
  <div class="bg-white my-2  p-4 rounded-lg grid grid-cols-2 shadow-md">
    <%= link_to quote.name, quote_path(quote) %>
    <div class="flex justify-end">
      <%= link_to edit_quote_path(quote), class: "btn btn-icon" do %>
        <%=show_svg('edit.svg') %>
      <% end %>
      <%= button_to quote_path(quote), method: :delete, form: { data: { turbo_frame: "_top" } }, form_class: "btn ml-4 btn-icon"  do %>
        <%=show_svg('trash.svg') %>
      <% end %>
    </div>
  </div>
<% end%>