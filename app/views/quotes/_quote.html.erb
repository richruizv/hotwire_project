<div class="bg-white my-4 p-4 rounded-lg grid grid-cols-2">
  <%= link_to quote.name, quote_path(quote) %>
  <div class="flex justify-end">
    <%= link_to edit_quote_path(quote), class: "btn btn-icon" do %>
      <%=show_svg('edit.svg') %>
    <% end %>
    <%= button_to quote_path(quote), {form_class: "btn ml-4 btn-icon" }, method: :delete do %>
      <%=show_svg('trash.svg') %>
    <% end %>
  </div>
</div>