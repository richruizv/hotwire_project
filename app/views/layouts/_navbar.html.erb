<header class="bg-red-500 text-white py-2 px-4 flex justify-between">
  <% if user_signed_in? %>
    <div class="navbar__brand">
      <%=current_company.name %>
    </div>
    <div class="flex">
      <div class="pt-1 mr-4">
        <%=current_user.name %>
      </div>
      <%= button_to "Sign out",
                    destroy_user_session_path,
                    method: :delete,
                    class: "btn btn-red" %>
    </div>
  <% else %>
    <%= link_to "Sign in",
                new_user_session_path,
                class: "btn btn-rose" %>
  <% end %>
</header>